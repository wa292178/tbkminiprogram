<!--index.wxml-->
<view class="container">
  <view class="card" wx:for="{{products}}" wx:for-item="product">
    <view class="card-image-box">
      <image class="card-image" src="{{product.mainImage}}" mode="scaleToFit" lazy-load></image>
    </view>
    <view class="card-content">
      <view class="card-content-head">
        {{product.productName}}
      </view>
      <view class="card-content-body">
        <view class="card-content-body-box">
          <view class="card-content-body-text">券后价</view>
        </view>
        <view>
          <view>{{product.productPrice - product.couponPrice}}</view>
        </view>
        <view>
          <view>原价</view>
        </view>
        <view>
          <view>{{product.productPrice}}</view>
        </view>
      </view>
      <view class="card-content-foot">
        现在购买
      </view>
    </view>
  </view>
</view>